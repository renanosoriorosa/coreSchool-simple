@model coreSchoolSimple.Models.ViewModels.AlunoViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Aluno.Nome" class="control-label"></label>
                <input asp-for="Aluno.Nome" class="form-control" />
                <span asp-validation-for="Aluno.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aluno.DataNasc" class="control-label"></label>
                <input asp-for="Aluno.DataNasc" class="form-control" />
                <span asp-validation-for="Aluno.DataNasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aluno.Nota" class="control-label"></label>
                <input asp-for="Aluno.Nota" class="form-control" />
                <span asp-validation-for="Aluno.Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aluno.TurmaId" class="control-label"></label>
                <select asp-for="Aluno.TurmaId" class ="form-control" asp-items="@(new SelectList(Model.Turmas,"Id","Numero","Curso"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Aluno.ProfessorId" class="control-label"></label>
                <select asp-for="Aluno.ProfessorId" class ="form-control" asp-items="@(new SelectList(Model.Professores,"Id","Nome","Email","Telefone"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

